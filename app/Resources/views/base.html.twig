<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        <link href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.8/css/materialize.min.css">

        {# Global styles #}
        <style>
            /* Submit button hack */
            input.hide-hack {
                position: absolute;
                width: 100%;
                height: 100%;
                opacity: 0;
            }
        </style>
    </head>
    <body>

        {# Header #}
        <nav>
            <div class="nav-wrapper yellow darken-2">
                <a href="{{ path('homepage') }}" class="brand-logo center">Newslator</a>
                <ul id="nav-mobile" class="right hide-on-small-and-down">
                    {#<li><a class="waves-effect waves-light" href="{{ path('homepage') }}">Frontpage</a></li>#}
                    <li><a class="waves-effect waves-light" href="{{ path('feed_index') }}">Feeds</a></li>
                </ul>
                <ul class="left">
                    {% block actions %}{% endblock %}
                </ul>
            </div>
        </nav>
        <br>

        {# Body #}
        <div class="container">
            {% block body %}{% endblock %}
        </div>

        {# Javascript #}
        {% block javascripts %}{% endblock %}
        <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.8/js/materialize.min.js"></script>
        <script>
            $(document).ready(function(){

                // Image amplification
                $('.materialboxed').materialbox();

                // Navbar link activation
                var currentPath = window.location.pathname;
                $.each($('nav').find('li'), function() {
                    var link = $(this).find('a').attr('href');
                    $(this).toggleClass('active', link == currentPath);
                });
            });


        </script>

    </body>
</html>